pipeline {
    agent any
    stages {
        stage("Checkout Code") {
            steps {
                git url: 'https://github.com/harshal-k-15/streamlitapp.git', branch: 'main'
            }
        }
    }
}

//         }
//         stage("Cleanup Stage") {
//             steps {
//                 sh 'docker rm -f $(docker ps -aq)'
//             }
        }
        stage("Build Docker image") {
            steps {
                sh 'docker build -t myimage .'
            }
        }
        stage("Create Container") {
            steps {
                sh 'docker run -d -p 8501:8501 myimage'
            }
        }
    }
}
